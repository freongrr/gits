fatal() {
  if [ -t 1 ] ; then
    echo -e "\e[1;31m$*\e[0m" > /dev/stderr
  else
    echo "$*"
  fi
  exit 64
}

error() {
  if [ -t 1 ] ; then
    echo -e "\e[1;33m$*\e[0m"
  else
    echo "$*"
  fi
}

warn() {
  if [ -t 1 ] ; then
    echo -e "\e[1;33m$*\e[0m"
  else
    echo "$*"
  fi
}

info() {
  if [ -t 1 ] ; then
    echo -e "\e[1;32m$*\e[0m"
  else
    echo "$*"
  fi
}

debug() {
  if [ -t 1 ] ; then
    echo -e "\e[0;32m$*\e[0m"
  else
    echo "$*"
  fi
}

